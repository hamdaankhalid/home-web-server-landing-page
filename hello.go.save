package main

import (
    "fmt"
    "log"
    "net/http"
)


func main() {
    http.HandleFunc("/hello", func(w http.ResponseWriter, r *http.Request){
	fmt.Fprintf(w, "Hi there! This server actually runs in my home in Seattle Washington! This is me -> https://hamdaan-rails-personal.herokuapp.com/")
    })


    fmt.Printf("Started server at port 3000\n")
    if err := http.ListenAndServe(":3000", nil); err != nil {
        log.Fatal(err)
    }
    
}
